<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marnistek.serverstats">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activites.AddNewServer"
            android:label="@string/title_activity_add_new_server"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activites.EditServer"
            android:label="@string/title_activity_edit_server"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activites.ServerSelector"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activites.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activites.InstallVNStat"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"/>
        <activity
            android:name=".Activites.PreferencesActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activites.KnownHosts"
            android:label="@string/title_activity_known_hosts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activites.KnownHostsData"
            android:label="@string/title_activity_known_hosts_data"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activites.Licences"
            android:label="@string/title_activity_licences"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activites.LicenceInfo"
            android:label="@string/title_activity_lincence_info"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>